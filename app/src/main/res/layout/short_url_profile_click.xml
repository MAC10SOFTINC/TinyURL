<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Input Long URL -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_one"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="none"
        app:helperText="@string/helper_long_url"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_long_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/controls_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_one"
        android:layout_alignParentEnd="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_share_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/str_share"
            app:icon="@drawable/ic_share" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_copy_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/dialog_share_long"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/str_copy"
            app:icon="@drawable/ic_copy" />

    </RelativeLayout>

    <!-- Shortened URL -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_two"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/controls_one"
        android:layout_marginTop="16dp"
        app:endIconMode="none"
        app:helperText="@string/helper_short_url"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_short_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/controls_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_two"
        android:layout_alignParentEnd="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_share_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/str_share"
            app:icon="@drawable/ic_share" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_copy_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/dialog_share_short"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/str_copy"
            app:icon="@drawable/ic_copy" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_below="@id/controls_two"
        android:text="@string/str_btn_stats"
        android:id="@+id/btn_stats"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/btn_stats"
        android:text="@string/str_owner"/>

</RelativeLayout>