<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_short_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="https://is.gd/lPDjQA"
        android:textFontWeight="600" />

    <TextView
        android:id="@+id/tv_long_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_short_url"
        android:layout_toStartOf="@id/btn_copy"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:text="https://blog.geekofia.in/ctf/2019/12/28/inferno-ctf-writeup.html" />

    <Button
        android:id="@+id/btn_copy"
        android:text="copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true" />

</RelativeLayout>